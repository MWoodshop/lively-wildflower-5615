<h1><%= @guest.name %></h1>
<h3>Nights: <%= @guest.nights %></h3>
<br>
<h2>Rooms</h2>
<% @stays.each do |stay| %>
  <div>
    <h4>Suite: <%= stay.room.suite %></h4>
    <p>Rate: <%= stay.room.rate %></p>
    <p>Hotel: <%= stay.room.hotel.name %></p>
  </div>
<% end %>
<!-- Renders _description_form_index.html.erb partial -->
<%= render partial: 'add_room_form', locals: { guest: @guest } %>
